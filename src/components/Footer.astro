---
const currentYear = new Date().getFullYear();

const quickLinks = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About Conor' },
  { href: '/contact', label: 'Schedule Consultation' },
];

const legalLinks = [
  { href: '/terms', label: 'Terms & Conditions' },
  { href: '/privacy', label: 'Privacy Policy' },
];

const services = [
  'Psychiatric Medication Management',
  'Medication-Assisted Treatment (MAT)',
  'Recovery Coaching',
  'Crisis Intervention',
  'Telehealth Services',
];
---

<footer class="bg-navy text-cream/90">
  <!-- Main Footer -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 lg:gap-8">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="flex items-center gap-2 mb-4">
          <div class="w-10 h-10 rounded-full bg-sage flex items-center justify-center">
            <span class="text-white font-display text-xl">R</span>
          </div>
          <div>
            <span class="font-display text-xl text-cream">Revival</span>
            <span class="text-cream/70 text-sm block -mt-1">Recovery Services</span>
          </div>
        </a>
        <p class="text-cream/70 text-sm leading-relaxed mb-6">
          Psychiatric medication management and addiction recovery services in Surprise, Arizona. Compassionate, evidence-based care for your mental health journey.
        </p>
        <div class="flex items-center gap-2 text-sm">
          <svg class="w-5 h-5 text-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          <span class="text-cream/70">Licensed in Arizona â€” #227933</span>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-display text-lg text-cream mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {quickLinks.map(link => (
            <li>
              <a href={link.href} class="text-cream/70 hover:text-amber transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="font-display text-lg text-cream mb-4">Services</h3>
        <ul class="space-y-2">
          {services.map(service => (
            <li class="text-cream/70 text-sm">{service}</li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="font-display text-lg text-cream mb-4">Contact</h3>
        <ul class="space-y-4">
          <li>
            <a href="tel:+19285886413" class="flex items-start gap-3 text-cream/70 hover:text-amber transition-colors group">
              <svg class="w-5 h-5 mt-0.5 text-sage group-hover:text-amber transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span class="text-sm">(928) 588-6413</span>
            </a>
          </li>
          <li>
            <a href="sms:+16236703622" class="flex items-start gap-3 text-cream/70 hover:text-amber transition-colors group">
              <svg class="w-5 h-5 mt-0.5 text-sage group-hover:text-amber transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
              <span class="text-sm">Text: (623) 670-3622</span>
            </a>
          </li>
          <li>
            <div class="flex items-start gap-3 text-cream/70">
              <svg class="w-5 h-5 mt-0.5 text-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
