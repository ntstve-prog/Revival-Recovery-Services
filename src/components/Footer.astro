---
const currentYear = new Date().getFullYear();

const quickLinks = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About Conor' },
  { href: '/contact', label: 'Schedule Consultation' },
];

const legalLinks = [
  { href: '/terms', label: 'Terms & Conditions' },
  { href: '/privacy', label: 'Privacy Policy' },
];

const services = [
  'Psychiatric Medication Management',
  'Medication-Assisted Treatment (MAT)',
  'Recovery Coaching',
  'Crisis Intervention',
  'Telehealth Services',
];
---

<footer class="bg-navy text-cream/90">
  <!-- Main Footer -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-10 lg:gap-8">
      <!-- Brand Column -->
      <div class="lg:col-span-2">
        <a href="/" class="block mb-4">
          <img
            src="/images/revival-logo-footer.svg"
            alt="Revival Recovery Services"
            class="w-64"
          />
        </a>
        <p class="text-cream/70 text-sm leading-relaxed mb-6 max-w-md">
          Telehealth psychiatric medication management and addiction recovery services serving all of Arizona. Compassionate, evidence-based care from the comfort of your home.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-display text-lg text-cream mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {quickLinks.map(link => (
            <li>
              <a href={link.href} class="text-cream/70 hover:text-amber transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="font-display text-lg text-cream mb-4">Services</h3>
        <ul class="space-y-2">
          {services.map(service => (
            <li class="text-cream/70 text-sm">{service}</li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="font-display text-lg text-cream mb-4">Contact</h3>
        <ul class="space-y-4">
          <li>
            <a href="tel:+19285886413" class="flex items-start gap-3 text-cream/70 hover:text-amber transition-colors group">
              <svg class="w-5 h-5 mt-0.5 text-sage group-hover:text-amber transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span class="text-sm">(928) 588-6413</span>
            </a>
          </li>
          <li>
            <a href="sms:+16236703622" class="flex items-start gap-3 text-cream/70 hover:text-amber transition-colors group">
              <svg class="w-5 h-5 mt-0.5 text-sage group-hover:text-amber transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
              <span class="text-sm">Text: (623) 670-3622</span>
            </a>
          </li>
          <li>
            <div class="flex items-start gap-3 text-cream/70">
              <svg class="w-5 h-5 mt-0.5 text-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
              <div class="text-sm">
                <p class="text-amber font-medium">Telehealth Only</p>
                <p class="text-cream/50 text-xs mt-1">Serving all of Arizona via secure video</p>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Emergency Disclaimer -->
  <div class="bg-navy-light/50 border-t border-cream/10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <p class="text-cream/60 text-xs text-center">
        <strong class="text-cream/80">Crisis Resources:</strong> If you are experiencing a mental health emergency, please call 988 (Suicide & Crisis Lifeline), go to your nearest emergency room, or call 911.
      </p>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-cream/10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
        <p class="text-cream/50 text-sm">
          &copy; {currentYear} Revival Recovery Services. All rights reserved.
        </p>
        <div class="flex items-center gap-6">
          {legalLinks.map(link => (
            <a href={link.href} class="text-cream/50 hover:text-cream transition-colors text-sm">
              {link.label}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>
