---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MobileCTABar from '../components/MobileCTABar.astro';
import ConsultationForm from '../components/ConsultationForm.astro';

const title = "Schedule Your Free Consultation | Revival Recovery Services";
const description = "Take the first step toward feeling like yourself again. Schedule a free 15-minute consultation with Conor Westerman, PMHNP-BC in Surprise, Arizona. No commitment required.";

const whoThisIsFor = [
  "You're struggling with depression, stress, or feeling overwhelmed",
  "Addiction has taken hold and you're ready for a change",
  "Current medications aren't working or have difficult side effects",
  "You want a provider who truly understands recovery",
  "You prefer convenient telehealth appointments from home"
];

const trustIndicators = [
  { icon: "shield", text: "HIPAA Compliant" },
  { icon: "insurance", text: "Insurance Accepted" }
];
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <!-- Hero Section -->
  <section class="bg-navy py-16 md:py-24 relative overflow-hidden">
    <div class="absolute -top-40 -right-40 w-96 h-96 bg-sage/10 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-amber/10 rounded-full blur-3xl"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <p class="text-amber font-medium mb-3 reveal">Your First Step Costs Nothing</p>
        <h1 class="font-display text-4xl md:text-5xl lg:text-6xl text-cream mb-6 reveal reveal-delay-1">
          Schedule Your Free<br class="hidden sm:block" />
          <span class="text-amber">15-Minute Consultation</span>
        </h1>
        <p class="text-cream/80 text-xl leading-relaxed reveal reveal-delay-2">
          No pressure. No commitment. Just a conversation to see if we're the right fit for your journey.
        </p>
      </div>
    </div>

    <!-- Bottom curve -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg viewBox="0 0 1440 80" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto" preserveAspectRatio="none">
        <path d="M0 80H1440V40C1440 40 1140 0 720 0C300 0 0 40 0 40V80Z" fill="#fafaf7"/>
      </svg>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16 md:py-24 bg-warm-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Left Column - Info -->
        <div>
          <!-- Who This Is For -->
          <div class="reveal">
            <h2 class="font-display text-2xl md:text-3xl text-navy mb-6">
              This Free Consultation Is For You If...
            </h2>
            <ul class="space-y-4 mb-10">
              {whoThisIsFor.map((item) => (
                <li class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-sage flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-charcoal/80">{item}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- What to Expect -->
          <div class="reveal reveal-delay-1 bg-cream rounded-2xl p-8 mb-10">
            <h3 class="font-display text-xl text-navy mb-6">What to Expect</h3>
            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-10 h-10 bg-sage/20 rounded-full flex items-center justify-center">
                  <span class="text-sage font-medium">1</span>
                </div>
                <div>
                  <p class="text-navy font-medium">Share Your Story</p>
                  <p class="text-charcoal/70 text-sm">Brief overview of what you're experiencing and your goals.</p>
                </div>
              </div>
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-10 h-10 bg-sage/20 rounded-full flex items-center justify-center">
                  <span class="text-sage font-medium">2</span>
                </div>
                <div>
                  <p class="text-navy font-medium">Ask Questions</p>
                  <p class="text-charcoal/70 text-sm">Learn about our approach and how we might help.</p>
                </div>
              </div>
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-10 h-10 bg-sage/20 rounded-full flex items-center justify-center">
                  <span class="text-sage font-medium">3</span>
                </div>
                <div>
                  <p class="text-navy font-medium">Decide Together</p>
                  <p class="text-charcoal/70 text-sm">If it's a good fit, schedule your first appointment.</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Trust Indicators -->
          <div class="reveal reveal-delay-2 grid grid-cols-2 gap-4">
            <div class="flex items-center gap-3 bg-cream rounded-lg px-4 py-3">
              <svg class="w-5 h-5 text-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              <span class="text-charcoal/80 text-sm">HIPAA Compliant</span>
            </div>
            <div class="flex items-center gap-3 bg-cream rounded-lg px-4 py-3">
              <svg class="w-5 h-5 text-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
              <span class="text-charcoal/80 text-sm">Insurance Accepted</span>
            </div>
            <div class="flex items-center gap-3 bg-amber/20 rounded-lg px-4 py-3 border border-amber/30">
              <svg class="w-5 h-5 text-amber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
              <span class="text-charcoal text-sm font-medium">Telehealth Only</span>
            </div>
          </div>

          <!-- Telehealth Notice -->
          <div class="reveal reveal-delay-2 mt-6 p-4 bg-sage/10 border border-sage/20 rounded-xl">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-sage flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <p class="text-charcoal/80 text-sm">
                <strong class="text-navy">All appointments are telehealth only.</strong> We provide secure video appointments to patients throughout Arizona from the comfort of your home.
              </p>
            </div>
          </div>

          <!-- Alternative Contact -->
          <div class="reveal reveal-delay-3 mt-10 p-6 border border-cream-dark rounded-xl">
            <h3 class="font-display text-lg text-navy mb-4">Prefer to Reach Out Directly?</h3>
            <div class="space-y-4">
              <a href="tel:+19285886413" class="flex items-center gap-3 text-charcoal/80 hover:text-sage transition-colors">
                <svg class="w-5 h-5 text-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span>Call: (928) 588-6413</span>
              </a>
              <a href="sms:+16236703622" class="flex items-center gap-3 text-charcoal/80 hover:text-sage transition-colors">
                <svg class="w-5 h-5 text-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
                <span>Text: (623) 670-3622</span>
              </a>
              <a href="mailto:Conor.westermanrecovery@gmail.com" class="flex items-center gap-3 text-charcoal/80 hover:text-sage transition-colors">
                <svg class="w-5 h-5 text-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span>Email: Conor.westermanrecovery@gmail.com</span>
              </a>
            </div>
          </div>
        </div>

        <!-- Right Column - Form -->
        <div class="reveal-scale">
          <div class="bg-cream rounded-2xl p-8 sticky top-24">
            <ConsultationForm variant="light" showHeading={true} />
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
  <MobileCTABar slot="mobile-cta" />
</BaseLayout>
